<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane style="-fx-background-color: #d8afff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalooppro.controllerPremium">
   <children>
      <Button fx:id="stockNotificationButton" layoutX="20.0" layoutY="20.0" onAction="#subscribeForNotifications" style="-fx-background-color: #3e007b;" text="Subscribe for Notifications" textFill="WHITE" />
      <Button fx:id="lineChartButton" layoutX="200.0" layoutY="20.0" onAction="#showLineChart" style="-fx-background-color: #3e007b;" text="Show Line Chart" textFill="WHITE" />
      <TextArea fx:id="notificationArea" editable="false" layoutX="20.0" layoutY="60.0" prefHeight="200.0" prefWidth="400.0" wrapText="true" />
      <Button layoutX="20.0" layoutY="280.0" onAction="#ClickOnBack" style="-fx-background-color: #3e007b;" text="Back" textFill="WHITE" />
   </children>
</AnchorPane>
